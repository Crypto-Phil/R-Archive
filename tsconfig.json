{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "jsx": "react",
    "noImplicitAny": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types", "./src/types", "node_modules/arconnect"]
  },
  "include": ["src"]
}
